{
  "imports": {
    "@retraigo/image-size": "jsr:@retraigo/image-size@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "tesseract.js": "npm:tesseract.js@^6.0.1"
  },
  "lint": {
    "include": ["*.ts"],
    "exclude": ["static/"]
  },
  "tasks": {
    "run": "deno run --allow-net --allow-read --allow-write --allow-run gpx-to-jpg.ts",
    "sample": "deno task run sample/sample.gpx",
    "test": "deno test --allow-net --allow-read --allow-write --allow-run",
    "update": "deno outdated --update --latest"
  }
}
